1.校验联系方式
function ValidatePhone(val) {
  var isPhone = /(^([0\*][0-9\*]{2,3}\s)?([2-9\*][0-9\*]{6,7})+(\-[0-9\*]{1,4})?$)|(^([0\*][0-9\*]{2,3})?([2-9\*][0-9\*]{6,7})+(\-[0-9\*]{1,4})?$)|(^([0\*][0-9\*]{2,3}[\-\*])?([2-9\*][0-9\*]{6,7})+(\-[0-9\*]{1,4})?$)|(^((\(\d{3}\))|(\d{3}\-))?([1\*][3456789\*][0-9\*]{9})$)/;//联系方式
  if (isPhone.test(val)) {
    return true;
  }
  else {
    return false;
  }
}
